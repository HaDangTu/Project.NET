@model IEnumerable<MotelManagement.Models.Invoice>
@{
    ViewBag.Title = "IncomingStatementReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="css/styles.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>

</head>
<body>

    <form class="container text-center">
        <h2 class="header" style="margin:20px 0">Báo cáo doanh thu</h2>
        <div class="searchdate" style="display: inline-flex;">
            @using (Html.BeginForm("IncomingStatementReport", "Report", FormMethod.Get, new { @class = "container text-center" }))
            {
                <div class="start_date" style="margin:0 10px">
                    <label style="font-size:20px; font-weight:500">Từ ngày</label>
                    @Html.Editor("FromDate")
                </div>
                <div class="start_end" style="margin:0 10px">
                    <label style="font-size:20px; font-weight:500">Đến ngày </label>@Html.Editor("ToDate")
                </div>
                <button class="btn btn-primary">Submit</button>
            }
        </div>
        <div style="font-size:24px; font-weight:700">
            Tổng số doanh thu: @ViewBag.Summary VND
        </div>
    </form>

    <main>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Số thứ tự</th>
                    <th scope="col">Số phòng</th>
                    <th scope="col">Tiền Thu</th>
                </tr>
            </thead>

            <tbody>
                @{int a = 1; }
                @foreach (var item in Model)
                {
                    if (Model.Count() != 0)
                    {
                        <tr>
                            <td>@a</td>
                            <td>@item.Room.Name</td>
                            <td>@item.Proceeds</td>
                        </tr>
                    }
                    a++;
                }

            </tbody>
        </table>
    </main>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/datatables-demo.js"></script>

</body>
</html>



