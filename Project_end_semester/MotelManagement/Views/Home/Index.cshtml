@model IEnumerable<MotelManagement.Models.Room>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card-columns">

    @foreach (var item in Model)
    {

        int guestInRoom = item.Guests.Count();
        int maxGuest = item.RoomType.NumberOfGuest;

        if (guestInRoom == 0)
        {
            <div class="card shadow-sm border-success">

                <div class="card-body">
                    <h4 class="card-title text-success text-center">@item.Name</h4>
                    <p class="card-text">Số lượng người: @guestInRoom/@maxGuest</p>
                    <input type="button" value="Thêm người" class="btn btn-primary" data-room-id="@item.ID"/>
                    @Html.ActionLink("Detail", "Detail", "Room", new { area = "" }, new { @class = "card-link" })
                </div>
            </div>
        }
        else if (guestInRoom > 0 && guestInRoom < maxGuest)
        {
            <div class="card shadow-sm border-warning">

                <div class="card-body">
                    <h4 class="card-title text-warning text-center">@item.Name</h4>
                    <p class="card-text">Số lượng người: @guestInRoom/@maxGuest</p>
                    <input type="button" value="Thêm người" class="btn btn-primary" data-room-id="@item.ID"/>
                    @Html.ActionLink("Detail", "Detail", "Room", new { area = "" }, new { @class = "card-link" })
                </div>
            </div>
        }
        else
        {
            <div class="card shadow-sm border-danger">

                <div class="card-body">
                    <h4 class="card-title text-danger text-center">@item.Name</h4>
                    <p class="card-text ">Số lượng người: @guestInRoom/@maxGuest</p>
                    <input type="button" value="Thêm người" class="btn btn-primary" data-room-id="@item.ID" disabled/>
                    @Html.ActionLink("Detail", "Detail", "Room", new { area = "" }, new { @class = "card-link" })
                </div>
            </div>
        }
        
    }
</div>

